@model List<Application.Application.DTOs.JsonDataDto>

@{
ViewData["Title"] = "Gerar JSON";
}

<div class="container mt-5 json-generator">
    <!-- Título -->
    <h1 class="text-primary">Gerenciamento de JSON</h1>
    <p class="text-muted text-center">Crie e visualize seus JSONs facilmente.</p>

    <!-- Botão Novo -->
    <div class="d-flex justify-content-end mb-4">
        <a asp-action="Generate" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i>
        </a>
    </div>

    <!-- Grid de JSONs -->
    <div id="tabela-container-Total" class="table-responsive">
        <table class="table table-hover table-striped">
            <thead class="table-dark">
            <tr class="text-center">
                <th style="width: 10%;">Ações</th>
                <th style="width: 30%;">JSON Gerado</th>
                <th style="width: 25%;">URL</th>
                <th style="width: 10%;">Método</th>
                <th style="width: 25%;">Resposta</th>
            </tr>
            </thead>
            <tbody>
            @if (Model != null && Model.Any())
            {
            @foreach (var propriedade in Model)
            {
            <tr>
                <td class="text-center">
                    <a asp-action="Visualizar" asp-route-id="@propriedade.JsonDataId" class="btn btn-primary btn-sm">
                        <i class="bi bi-eye"></i>
                    </a>
                </td>
                <td class="text-truncate" style="max-width: 300px;">@propriedade.JsonGerado</td>
                <td class="text-truncate">@propriedade.Url</td>
                <td class="text-center">@propriedade.Metodo</td>
                <td class="text-truncate" style="max-width: 300px;">@propriedade.Response</td>
            </tr>
            }
            }
            else
            {
            <tr>
                <td colspan="5" class="text-center text-muted">
                    Nenhum registro encontrado.
                </td>
            </tr>
            }
            </tbody>
        </table>
    </div>
</div>
